<Page x:Class="Police.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Police.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- ФИО -->
        <TextBlock Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Text="Куликов Дмитрий Николаевич" FontSize="17" HorizontalAlignment="Center" Margin="0 20 0 0"/>

        <!-- Заголовок -->
        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="Вы можете написать заявление на гражданина" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Рост -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Рост" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 50"/>
        <TextBox Grid.Row="2" Grid.Column="0" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150"/>

        <!-- Вес -->
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Вес" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 50"/>
        <TextBox Grid.Row="2" Grid.Column="1" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150"/>

        <!-- Пол -->
        <TextBlock Grid.Row="2" Grid.Column="2" Text="Пол" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 50"/>
        <ComboBox Grid.Row="2" Grid.Column="2" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="25"/>

        <!-- Возраст -->
        <TextBlock Grid.Row="2" Grid.Column="3" Text="Возраст" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 50"/>
        <TextBox Grid.Row="2" Grid.Column="3" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150"/>

        <!-- Опознавательные знаки -->
        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="Опознавательные знаки" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 60"/>
        <TextBox Grid.Row="3" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="70" Margin="0 0 0 50"/>

        <!-- Кнопка отправить -->
        <Button Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Content="Отправить" Height="60" FontSize="17"/>

    </Grid>
</Page>
